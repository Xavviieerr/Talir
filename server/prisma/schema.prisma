generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id             Int      @id @default(autoincrement())
  userId         String   // Clerk or auth provider user ID
  applicationName String
  jobTitle       String
  jobDescription String
  companyInfo    String
  previousCV     String
  noteToAI       String
  generatedCV    String
  createdAt      DateTime @default(now())
}